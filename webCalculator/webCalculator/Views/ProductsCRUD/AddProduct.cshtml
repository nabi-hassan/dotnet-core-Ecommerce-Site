@model webCalculator.Models.ProductData
<script src="~/js/ProductCRUD.js"> </script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@{
    ViewData["Title"] = "Add Product";

}

<h1>@ViewData["Title"]</h1>

<p>Product CRUD.</p>
<div class="text-center">
        
        <div class="form-group row" style="margin-top: 2em;">
            <label for="ProdTitle" class="col-sm-2 col-form-label" style="text-align: left;">Product Title:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="ProdTitle" name="ProdTitle" placeholder="Product Title" style="text-align: left;">
            </div>
        </div>
        <div class="form-group row" style="margin-top: 2em;">
            <label for="ProdDescription" class="col-sm-2 col-form-label" style="text-align: left;">Product Description:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="ProdDescription" name="ProdDescription" placeholder="Product Description" style="text-align: left;">
            </div>
        </div>
        <div class="form-group row" style="margin-top: 2em;">
            <label for="ProdQuantity" class="col-sm-2 col-form-label" style="text-align: left;">Product Quantity:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="ProdQuantity" name="ProdQuantity" placeholder="Product Quantity" style="text-align: left;">
            </div>
        </div>
        <div class="form-group row" style="margin-top: 2em;">
            <label for="ProdBrand" class="col-sm-2 col-form-label" style="text-align: left;">Product Brand:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="ProdBrand" name="ProdBrand" placeholder="Product Brand" style="text-align: left;">
            </div>
        </div>
        <div class="form-group row" style="margin-top: 2em;">
            <label for="ProdCategory" class="col-sm-2 col-form-label" style="text-align: left;">Product Category:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="ProdCategory" name="ProdCategory" placeholder="Product Category" style="text-align: left;">
            </div>
        </div>
        <div class="form-group row" style="margin-top: 2em;">
            <label for="ProdPrice" class="col-sm-2 col-form-label" style="text-align: left;">Product Price:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="ProdPrice" name="ProdPrice" placeholder="Product Price" style="text-align: left;">
            </div>
        </div>
        <div class="form-group row" style="margin-top: 2em;">
            <div class="col-sm-12 text-left">
                <button type="button" class="btn btn-primary" onclick="addProdjs()">Add Product</button>
            </div>
        </div>
</div>
