@model webCalculator.Models.ProductData
<script src="~/js/ProductCRUD.js"> </script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@{
    ViewData["Title"] = "Update Product";
    ProductData prod = TempData["prodTemp"] as ProductData;
}

<h1>@ViewData["Title"]</h1>

<p>Product CRUD.</p>
<div class="text-center">

    <div class="form-group row" style="margin-top: 2em;">
        <label for="ProdId" class="col-sm-2 col-form-label" style="text-align: left;">Product Id:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="ProdId" name="ProdId" placeholder="Product Id" value="@prod.ProdId" style="text-align: left;" >
        </div>
    </div>
    <div class="form-group row" style="margin-top: 2em;">
        <label for="ProdTitle" class="col-sm-2 col-form-label" style="text-align: left;">Product Title:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="ProdTitle" name="ProdTitle" placeholder="Product Title" value="@prod.ProdTitle" style="text-align: left;">
        </div>
    </div>
    <div class="form-group row" style="margin-top: 2em;">
        <label for="ProdDescription" class="col-sm-2 col-form-label" style="text-align: left;">Product Description:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="ProdDescription" name="ProdDescription" placeholder="Product Description" value="@prod.ProdDescription" style="text-align: left;">
        </div>
    </div>
    <div class="form-group row" style="margin-top: 2em;">
        <label for="ProdQuantity" class="col-sm-2 col-form-label" style="text-align: left;">Product Quantity:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="ProdQuantity" name="ProdQuantity" placeholder="Product Quantity" value="@prod.ProdQuantity" style="text-align: left;">
        </div>
    </div>
    <div class="form-group row" style="margin-top: 2em;">
        <label for="ProdBrand" class="col-sm-2 col-form-label" style="text-align: left;">Product Brand:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="ProdBrand" name="ProdBrand" placeholder="Product Brand" value="@prod.ProdBrand" style="text-align: left;">
        </div>
    </div>
    <div class="form-group row" style="margin-top: 2em;">
        <label for="ProdCategory" class="col-sm-2 col-form-label" style="text-align: left;">Product Category:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="ProdCategory" name="ProdCategory" placeholder="Product Category" value="@prod.ProdCategory" style="text-align: left;">
        </div>
    </div>
    <div class="form-group row" style="margin-top: 2em;">
        <label for="ProdPrice" class="col-sm-2 col-form-label" style="text-align: left;">Product Price:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="ProdPrice" name="ProdPrice" placeholder="Product Price" value="@prod.ProdPrice" style="text-align: left;">
        </div>
    </div>
    <div class="form-group row" style="margin-top: 2em;">
        <div class="col-sm-12 text-left">
            <button type="button" class="btn btn-primary" onclick="updateProdjs()">Update Product</button>
        </div>
    </div>
</div>
